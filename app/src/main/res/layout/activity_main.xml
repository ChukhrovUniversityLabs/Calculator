<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_span="4"
                android:onClick="display"
                android:text="0"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="70sp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/button_ac"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#a5a5a5"
                android:onClick="clearOutput"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_opposite"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#a5a5a5"
                android:onClick="opposite"
                android:text="ᐩ/˗"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_module"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#a5a5a5"
                android:onClick="module"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_divide"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#f2a33b"
                android:onClick="operation"
                android:text="÷"
                android:textSize="30sp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/button_seven"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#333333"
                android:onClick="display"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_eight"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#333333"
                android:onClick="display"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_nine"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#333333"
                android:onClick="display"
                android:text="9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#f2a33b"
                android:onClick="operation"
                android:text="×"
                android:textSize="30sp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/button_four"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#333333"
                android:onClick="display"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_five"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#333333"
                android:onClick="display"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_six"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#333333"
                android:onClick="display"
                android:text="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#f2a33b"
                android:onClick="operation"
                android:text="−"
                android:textSize="30sp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/button_one"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#333333"
                android:onClick="display"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_two"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#333333"
                android:onClick="display"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_three"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#333333"
                android:onClick="display"
                android:text="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#f2a33b"
                android:onClick="operation"
                android:text="+"
                android:textSize="40sp" />
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/button_zero"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:layout_span="2"
                android:backgroundTint="#333333"
                android:onClick="display"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_separator"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#333333"
                android:onClick="display"
                android:text="."
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_equals"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#f2a33b"
                android:onClick="calculate"
                android:text="="
                android:textSize="30sp" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>